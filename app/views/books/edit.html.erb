
<h1>編集画面</h1>

<%= form_with model: @book do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title, class: "book_title" %>

 <h4>Body</h4>
 <%= f.text_area :body, class: "body_class" %>

 <p><%= f.submit 'Update Book' %></p>

 <td><%= link_to 'Show', book_path(@book), class: "show_#{@book.id}" %></td>
 <td><%= link_to 'Back', books_path, class: "back" %></td>

 <% end %>