<main>


<h1>Books</h1>
<table>
 <tr>
  <th>Title</th>
  <th>Boddy</th>
  <th></th>
 </tr>


<% @books.each do |book| %>
<tr>
 <td><%= book.title %></td>
 <td><%= book.body %></td>
 <td>
     <%= link_to "Show", book_path(book), class: "show_#{book.id}" %>
     <%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %>
     <%= link_to "Destroy", book_path(book), method: :delete, class: "destroy_#{book.id}" %>
 </td>
</tr>

<% end %>
</table>



<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4 class="form_field">Title</h4>
  <%= f.text_field :title, class: "book_title" %>
  <h4 class="form_field">Body</h4>
  <%= f.text_area :body, class: "book_body" %>
  <p><%= f.submit 'Create Book' %></p>

<% end %>

</main>