<main>

<div>
 <%= flash[:notice] %>
</div>

<h1>Books</h1>


<table>
 <thead>
 <tr>
  <th>Title</th>
  <th>Body</th>
  <th colspan="3"></th>
 </tr>
 </thead>

 <tbody>
<% @books.each do |book| %>
<tr>
 <td><%= book.title %></td>
 <td><%= book.body %></td>
 <td>
     <%= link_to "Show", book_path(book), class: "show_#{book.id}" %>
     <%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %>
     <%= link_to "Destroy", book_path(book), method: :delete, class: "destroy_#{book.id}" %>
 </td>
</tr>

<% end %>
</tbody>
</table>



<h1>New Book</h1>


<%= form_with model: @book do |f| %>

<% if @book.errors.any? %>
