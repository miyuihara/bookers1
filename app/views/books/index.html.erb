  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
 </div>
 <% end %>

  <h4 class="form_field">Title</h4>
  <%= f.text_field :title, class: "book_title" %>
  <h4 class="form_field">Body</h4>
  <%= f.text_area :body, class: "book_body" %>
  <p><%= f.submit 'Create Book' %></p>

<% end %>

</main>